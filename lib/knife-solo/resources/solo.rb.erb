base = File.expand_path('..', __FILE__)

<%
  def abs_path(path)
    path && "File.join(base, '#{path[:dest]}') # #{path[:src]}"
  end

  solo_rb.paths.each_pair do |key, paths|
    paths.compact!
    if paths.length <= 1
-%>
<%= key %> <%= abs_path(paths.first) || 'nil' %>
<%  else -%>
<%= key %> []
<%    paths.each do |path| -%>
<%= key %> << <%= abs_path(path) %>)
<%    end
    end
  end
-%>
<% solo_rb.settings.each_pair do |k, v| -%>
<%= k %> <%= v.inspect %>
<% end -%>
